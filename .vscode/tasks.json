{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Current Java File",
      "type": "shell",
      "command": "javac",
      "args": ["${file}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$javac"]
    },
    {
      "label": "Run Current Java File",
      "type": "shell",
      "command": "java",
      "args": ["-cp", "${fileDirname}", "${fileBasenameNoExtension}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": "Compile Current Java File"
    },
    {
      "label": "Compile and Run Ex1",
      "type": "shell",
      "command": "javac",
      "args": ["Sort/bubble sort/ex1.java"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$javac"]
    },
    {
      "label": "Run Ex1",
      "type": "shell",
      "command": "java",
      "args": ["-cp", "Sort/bubble sort", "Ex1"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": "Compile and Run Ex1"
    }
  ]
}
